<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pizza">
    <ImageView
        android:foreground="@drawable/foreground_design"
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg2"
        android:scaleType="centerCrop"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/heading"
        android:fontFamily="@font/lobster"
        android:text="@string/String"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="53sp"
        android:paddingTop="10dp"
        tools:ignore="MissingConstraints" />
    <TextView
        android:paddingVertical="15dp"
        android:layout_margin="5dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/desc1"
        android:fontFamily="@font/lobster"
        android:text="Margretta pizzza
         price 500 rs"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="33sp"
        android:paddingTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/heading"
        app:layout_constraintLeft_toRightOf="@+id/pizza1"/>
    <ImageView
        android:layout_margin="5dp"
        android:id="@+id/pizza1"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:src="@drawable/pizza4"
        app:layout_constraintTop_toBottomOf="@+id/heading"
        app:layout_constraintRight_toLeftOf="@id/desc1"
        android:onClick="popup"
        />
    <TextView
        android:paddingVertical="15dp"
        android:layout_margin="5dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/desc2"
        android:fontFamily="@font/lobster"
        android:text="Cheeze corn pizza
         price 400 rs"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="33sp"
        android:paddingTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/desc1"
        app:layout_constraintLeft_toRightOf="@+id/pizza2"/>
    <ImageView
        android:layout_margin="5dp"
        android:id="@+id/pizza2"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:src="@drawable/pizza3"
        app:layout_constraintTop_toBottomOf="@+id/pizza1"
        app:layout_constraintRight_toLeftOf="@id/desc2"
        android:onClick="popup"
        />
    <TextView
        android:paddingVertical="15dp"
        android:layout_margin="5dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/desc3"
        android:fontFamily="@font/lobster"
        android:text="Capsicum paneer pizza
         price 450 rs"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="33sp"
        android:paddingTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/desc2"
        app:layout_constraintLeft_toRightOf="@+id/pizza3"/>
    <ImageView
        android:layout_margin="5dp"
        android:id="@+id/pizza3"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:src="@drawable/pizza1"
        app:layout_constraintTop_toBottomOf="@+id/pizza2"
        app:layout_constraintRight_toLeftOf="@id/desc3"
        android:onClick="popup"
        />
    <TextView
        android:paddingVertical="15dp"
        android:layout_margin="5dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/desc4"
        android:fontFamily="@font/lobster"
        android:text="Red sauce chilli pizza
         price 450 rs"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="33sp"
        android:paddingTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/desc3"
        app:layout_constraintLeft_toRightOf="@+id/pizza4"/>
    <ImageView
        android:layout_margin="5dp"
        android:id="@+id/pizza4"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:src="@drawable/pizz"
        app:layout_constraintTop_toBottomOf="@+id/pizza3"
        app:layout_constraintRight_toLeftOf="@id/desc4"
        android:onClick="popup"
        />

</androidx.constraintlayout.widget.ConstraintLayout>